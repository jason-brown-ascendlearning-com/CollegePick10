@model CollegePick10V2.Entities.Models.EmailModel


@{
    ViewData["Title"] = "User List";
}

<div class="col-lg-8 callout">
    <blockquote>
        <h3>Bulk Email</h3>
    </blockquote>
    <form asp-action="SendBulkEmail">
        <div class="form-group">
            <label asp-for="Subject" class="control-label">Subject</label>
            <input asp-for="Subject" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Body" class="control-label">Body</label>
            @Html.TextAreaFor(m => m.Body, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-primary" />
        </div>
    </form>
</div>